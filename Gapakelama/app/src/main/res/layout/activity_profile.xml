<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gian.gapakelama.DashboardActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/signinbg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/pp"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/buttonstyle_whitebg"
                    android:cropToPadding="false"
                    android:elevation="5dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/users" />

                <customfonts.MyTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:text="Nama user"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/baseline_email_black_48dp" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="Wiliam@gmail.com"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/baseline_phone_android_black_48dp" />

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="+266 225 225"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="50dp"
                        android:layout_margin="20dp"
                        android:gravity="right">

                        <customfonts.MyTextView
                            android:id="@+id/head"
                            android:layout_width="342dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:paddingBottom="3dp"
                            android:text="Sign Out"
                            android:paddingRight="20dp"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp" />

                        <ImageButton
                            android:id="@+id/signoutButton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/buttonstyle_white"
                            android:scaleType="centerInside"
                            android:src="@drawable/baseline_exit_to_app_black_48dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>


